{
  "extends": "./node_modules/gts/",
  "rules": {
    "node/no-unpublished-require": [
      "error",
      {
        "allowModules": [
          "mocha",
          "chai",
          "chai-http",
          "sinon",
          "faker"
        ],
        "convertPath": null,
        "tryExtensions": [
          ".js",
          ".json",
          ".node"
        ]
      }
    ]
  }
}
